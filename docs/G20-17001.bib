    title = "Solid State Sensors for Hydrogen Peroxide Detection",
    author = "Patel, Vinay  and
      Kruse, Peter  and
      Selvaganapathy, Ponnambalam Ravi",
    journal = "Biosensors, Volume 11, Issue 1",
    volume = "11",
